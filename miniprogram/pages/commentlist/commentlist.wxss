
.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userAvatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
}

.userName {
  font-size: 17px;
}

.text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40px;
  margin: 10px;
}

.voice {
  width: 160px;
  height: 40px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background: lightgray;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  padding: 8px 10px;
  box-sizing: border-box;
  margin: 10px;
}

.play-icon {
  width: 24px;
  height: 24px;
  margin-right: 5px;
}

.duration {
  height: 24px;
  line-height: 24px;
}

.comment-list {
  margin-top: 40px;
}

.comment-item {
  background: white;
  padding: 20px;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.item-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.back {
  height: 46px;
  background: white;
  z-index: 999;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 46px;
  font-size: 17px;
  text-align: center;
  padding-bottom:env(safe-area-inset-bottom);
}
