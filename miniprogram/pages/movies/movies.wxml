<view class="page">
  <view class="movie-list">
    <navigator class="movie-item" wx:key="index" wx:for="{{movies}}" wx:for-item="item" url="/pages/detail/detail?id={{item.id}}">
      <image class=" movie-img " src="{{item.img}} " mode="aspectFill"></image>
      <view class="movie-info ">
        <view class="movie-name ">{{item.name}}</view>
        <view class="movie-genre ">分类：{{item.genre}}</view>
      </view>
    </navigator>
  </view>
</view>