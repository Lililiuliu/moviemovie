page {
  height: 100%;
}

.page {
  padding-left: 15px;
  padding-right: 15px;
  box-sizing: border-box;
  padding-top: 20px;
  padding-bottom: 40px;
  height: 100%;
}

.detail-card {
  height: 100%;
  width: 100%;
  position: relative;
  display: flex;
}

.detail {
  z-index: 1;
  position: absolute;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  top:420rpx;
  padding-top:20px;
  padding-left:40px;
  padding-right: 40px;
}
.minidetail {
  top:140px;
}

.name {
  font-size: 40rpx;
  font-weight: bolder;
}

.summary {
  padding-top:10px;
  font-size: 17px;
  color:#353535;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break:break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:7; 
}

.mini {
  font-size: 14px;
}

.cover {
  position: absolute;
  z-index: 1;
  height: 300rpx;
  left:50%;
  margin-left:-160px;
}

.bg {
  position: absolute;
  bottom: 0;
  top: 40px;
  height: auto;
  width: 100%;
  background: white;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 5px;
}

.button-sp-area{
  bottom: 0;
  margin: 0 auto;
  padding-bottom: 15px;
  padding-left: 15px;
  padding-right: 15px;
  padding-top:15px;
  text-align:center;
  z-index: 1;
  position: absolute;
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  justify-content:space-between;
}

button:not([size='mini']) {
  width: 300rpx;
}

.btn-icon {
  width: 24px;
  height: 24px;
  margin-right: 5px;
}

button {
  display: flex;
  justify-content: center;
  overflow:hidden;
  white-space:nowrap;
}


